{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimServiceName": {
      "type": "string"
    },
    "repoBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "name": "[concat(parameters('apimServiceName'), '/EdFi-v32')]",
      "apiVersion": "2018-01-01",
      "properties": {
        "displayName": "Ed-Fi API v3.2",
        "apiRevision": "1",
        "description": "API Management facade for a very handy and free online HTTP tool",
        "serviceUrl": "https://httpbin.org",
        "path": "httpbin",
        "protocols": [
          "https"
        ],
        "apiVersion": "v3.2",
        "apiVersionSetId": "[concat(resourceId('Microsoft.ApiManagement/service', parameters('apimServiceName')), '/api-version-sets/versionset-edfi-api')]"
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/operations",
      "name": "[concat(parameters('apimServiceName'), '/EdFi-v32/get')]",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apimServiceName'), 'EdFi-v32')]"
      ],
      "properties": {
        "displayName": "Returns GET data.",
        "method": "GET",
        "urlTemplate": "/get",
        "templateParameters": [],
        "description": "Returns GET data.\n",
        "responses": [
          {
            "statusCode": 200,
            "description": "OK",
            "headers": []
          }
        ]
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/products/apis",
      "name": "[concat(parameters('apimServiceName'), '/starter/EdFi-v32')]",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apimServiceName'), 'EdFi-v32')]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ApiManagement/service/products/apis",
      "name": "[concat(parameters('apimServiceName'), '/unlimited/EdFi-v32')]",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apimServiceName'), 'EdFi-v32')]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/policies",
      "name": "[concat(parameters('apimServiceName'), '/EdFi-v32/policy')]",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apimServiceName'), 'EdFi-v32')]"
      ],
      "properties": {
        "policyContent": "[concat(parameters('repoBaseUrl'), '/apis/edfi/v3.2/edfi.v3.2.policy.xml')]",
        "contentFormat": "rawxml-link"
      }
    }
  ]
}