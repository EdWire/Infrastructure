{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "repoBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository"
      }
    },
    "apimServiceName": {
      "type": "string",
      "metadata": {
        "description": "The name of the API Management"
      }
    },
    "publisherEmail": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "info@edgraph.com",
      "metadata": {
        "description": "The email address of the owner of the service"
      }
    },
    "publisherName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "EdWire, Inc",
      "metadata": {
        "description": "The name of the owner of the service"
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [ "Developer", "Standard", "Premium" ],
      "defaultValue": "Developer",
      "metadata": {
        "description": "The pricing tier of this API Management service"
      }
    },
    "skuCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The instance size of this API Management service."
      }
    },
    "virtualNetworkType": {
      "type": "string",
      "allowedValues": [ "Internal", "External" ],
      "defaultValue": "Internal",
      "metadata": {
        "description": "The type of VPN in which API Management service needs to be configured in."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the virtual network to deploy the API Management service in."
      }
    },
    "apimSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of a subnet in a virtual network to deploy the API Management service in."
      }
    },
    "sfManagementEndpoint": {
      "type": "string",
      "metadata": {
        "description": "The service fabric cluster management endpoint"
      }
    },
    "sfClientCertificateThumprint": {
      "type": "string",
      "metadata": {
        "description": "The service fabric cluster client certificate thumbprint"
      }
    },
    "sfServerCertificateThumprint": {
      "type": "string",
      "metadata": {
        "description": "The service fabric cluster server certificate thumbprint"
      }
    },
    "sfCertificateBase64": {
      "type": "string",
      "metadata": {
        "description": "The service fabric cluster server certificate base 64"
      }
    },
    "apimSslKeyVaultName": {
      "type": "string",
      "metadata": {
        "description": "The name to the key vault that contains the SSL certificate to be used by the host names' custom domain."
      }
    },
    "apimSslCertificateSecretKeyVaultUrl": {
      "type": "string",
      "metadata": {
        "description": "The url to the key vault certifcate's secret for the SSL certificate to be used by the host names' custom domain."
      }
    },
    "apimProxyHostName": {
      "type": "string",
      "metadata": {
        "description": "The APIM's proxy custom domain name"
      }
    },
    "apimPortalHostName": {
      "type": "string",
      "metadata": {
        "description": "The APIM's portal custom domain name"
      }
    },
    "apimManagementHostName": {
      "type": "string",
      "metadata": {
        "description": "The APIM's management custom domain name"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimServiceInitialTemplate",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/service/service-initial.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          },
          "publisherName": {
            "value": "[parameters('publisherName')]"
          },
          "publisherEmail": {
            "value": "[parameters('publisherEmail')]"
          },
          "sku": {
            "value": "[parameters('sku')]"
          },
          "skuCount": {
            "value": "[parameters('skuCount')]"
          },
          "virtualNetworkType": {
            "value": "[parameters('virtualNetworkType')]"
          },
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "apimSubnetName": {
            "value": "[parameters('apimSubnetName')]"
          },
          "apimSslKeyVaultName": {
            "value": "[parameters('apimSslKeyVaultName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimServiceSubsequentTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceInitialTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/service/service-subsequent.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          },
          "publisherName": {
            "value": "[parameters('publisherName')]"
          },
          "publisherEmail": {
            "value": "[parameters('publisherEmail')]"
          },
          "sku": {
            "value": "[parameters('sku')]"
          },
          "skuCount": {
            "value": "[parameters('skuCount')]"
          },
          "virtualNetworkType": {
            "value": "[parameters('virtualNetworkType')]"
          },
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "apimSubnetName": {
            "value": "[parameters('apimSubnetName')]"
          },
          "apimSslCertificateSecretKeyVaultUrl": {
            "value": "[parameters('apimSslCertificateSecretKeyVaultUrl')]"
          },
          "apimProxyHostName": {
            "value": "[parameters('apimProxyHostName')]"
          },
          "apimPortalHostName": {
            "value": "[parameters('apimPortalHostName')]"
          },
          "apimManagementHostName": {
            "value": "[parameters('apimManagementHostName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimServiceFabricCertificateTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceSubsequentTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/certificates/cert-servicefabric.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" },
          "sfCertificateBase64": { "value": "[parameters('sfCertificateBase64')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimServiceFabricBackendTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceFabricCertificateTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/backends/backend-servicefabric.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" },
          "sfManagementEndpoint": { "value": "[parameters('sfManagementEndpoint')]" },
          "sfClientCertificateThumprint": { "value": "[parameters('sfClientCertificateThumprint')]" },
          "sfServerCertificateThumprint": { "value": "[parameters('sfServerCertificateThumprint')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimProductAnonymousTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceSubsequentTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/products/product-anonymous.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimProductStarterTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceSubsequentTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/products/product-starter.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "apimProductUnlimitedTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'apimServiceSubsequentTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/products/product-unlimited.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" }
        }
      }
    },
    //{
    //  "type": "Microsoft.Resources/deployments",
    //  "name": "subscriptionsTemplate",
    //  "apiVersion": "2017-05-10",
    //  "dependsOn": [
    //    "[resourceId('Microsoft.Resources/deployments', 'apimProductAnonymousTemplate')]",
    //    "[resourceId('Microsoft.Resources/deployments', 'apimProductStarterTemplate')]",
    //    "[resourceId('Microsoft.Resources/deployments', 'apimProductUnlimitedTemplate')]"
    //  ],
