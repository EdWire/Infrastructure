    {
      "type": "Microsoft.Resources/deployments",
      "name": "serviceFabricCertificateTemplate",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'serviceTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('repoBaseUrl'), '/certificates/cert-servicefabric.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": { "value": "[parameters('apimServiceName')]" },
          "sfCertificateBase64": { "value": "[parameters('sfCertificateBase64')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
