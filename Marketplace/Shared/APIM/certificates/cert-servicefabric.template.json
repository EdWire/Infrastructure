{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimServiceName": {
      "type": "string",
      "metadata": {
        "description": "The name of the API Management"
      }
    },
    "sfCertificateBase64": {
      "type": "string",
      "metadata": {
        "description": "The service fabric cluster certificate base 64"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/certificates",
      "name": "[concat(parameters('apimServiceName'), '/certificate-pfx')]",
      "apiVersion": "2019-01-01",
      "properties": {
        "data": "[parameters('sfCertificateBase64')]",
        "password": ""
      }
    }
  ],
  "outputs": {}
}
